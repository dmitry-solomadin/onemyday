div#signInModal.fade.modal.hide class="#{@locale}"
  button type="button" class="close" data-dismiss="modal" Ã—
  div.modal-header.open-sans
    h3 = t '.sign_in_header'
  div.modal-body
    a.social-link.social-facebook href="/auth/facebook"
      div
    - if @locale == "ru"
      a.social-link.social-vkontakte href="/auth/vkontakte"
        div
    a.social-link.social-twitter href="/auth/twitter"
      div
    div style="clear:both;"
    div.signInHeader
      div.text = t '.or'
      div.border
    div.explanation = t ".exp"
    = form_tag regular_sign_in_path, class:"signInForm", remote:true, onsubmit:"return App.home.onLoginSubmit();" do
      div#loginError.loginError
      div.mb10
        label = t '.email'
        input#loginEmail.long name="email" req="req" type="text" data-err-text="#{t '.email_err'}"
      div.mb10
        label = t '.password'
        input#loginPassword.long name="password" req="req" type="password" data-err-text="#{t '.password_err'}"
      div
        label
        input.fr.smb.btn.btn-large.btn-foxtrot data-loading-text="#{t ".submiting"}" data-complete-text="#{t ".submit"}" type="submit" value="#{t ".submit"}"