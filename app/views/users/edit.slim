div#editUser
  h1.singleday-header Edit your profile
  = form_for current_user, html: {class: "form-horizontal oneHorizontalForm"} do |f|
    fieldset
      div.control-group
        label.control-label for="email" Email
        div.controls
          = f.text_field :email, class: "input-xlarge", id: "email"
      div.control-group
        label.control-label for="name" Name
        div.controls
          = f.text_field :name, class: "input-xlarge", id: "name"
      div.control-group
        label.control-label for="locale" Locale
        div.controls
          = f.select :locale, get_available_locales, class: "input-xlarge", id: "locale"
      div.control-group
        label.control-label for="avatar" Avatar
        div.controls
          = image_tag current_user.avatar.url :thumb
          a.btn.ml10 href="#uploadAvatarModal" data-toggle="modal" Upload
          - if current_user.has_facebook?
            = link_to "Take from facebook", update_avatar_facebook_path, class: "btn ml10"
          - if current_user.has_twitter?
            = link_to "Take from twitter", update_avatar_twitter_path, class: "btn ml10"

      div.control-group
        label.facebookAuth.control-label for="facebook"
        div.controls
          div#facebook.switch.switch-danger{class="#{'active' if current_user.has_facebook?}"
          data-toggle="switch" data-on="ON" data-off="OFF" data-checkbox="danger"}
          span.info Login with Facebook
      div.control-group.last-child
        label.twitterAuth.control-label for="twitter"
        div.controls
          div#twitter.switch.switch-danger{class="#{'active' if current_user.has_twitter?}"
          data-toggle="switch" data-on="ON" data-off="OFF" data-checkbox="danger"}
          span.info Login with Twitter
      div.form-actions
        = f.submit "Apply changes", class: "btn btn-large btn-foxtrot open-sans f18"

