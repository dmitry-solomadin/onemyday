- is_current_user = current_user == @user
div#showUserDiv
  div.innerContainer
    div.infoContainer
      = image_tag @user.avatar.url(:small), width: '50', height: '50', class: 'avatar'
      div.userinfo
        div.username = @user.name
      - if @user.has_facebook?
        a href="#{@user.facebook.get_object("me")["link"]}"
          img.ml10.social-ntwk src="/assets/facebook-auth.png" width="24"
      - if @user.has_twitter?
        a href="http://twitter.com/#{@user.twitter.user.screen_name}"
          img.ml5.social-ntwk src="/assets/twitter_auth.png" width="24"
    div.tabsContainer
      ul#userTabs.tabs
        li#ownTab.selected
          = link_to content_tag(:span, "#{is_current_user ? 'Yours': 'His'}"), own_stories_path(@user.id), remote: true
        li
          = link_to content_tag(:span, "#{is_current_user ? 'Liked by you': 'Liked'}"), liked_stories_path(@user.id), remote: true
        - if is_current_user && @user.stories.unpublished.any?
          li#unpublishedTab
            a href="#{unfinished_stories_path(@user.id)}" data-remote="true"
              span Drafts (<span id='unpublishedCount'>#{@user.stories.unpublished.size}</span>)
div#showUserTabContent
  = render "/stories/list_stories", stories: @stories, own: is_current_user