var anyErrors = <%= @comment.errors.any? %>;
if (!anyErrors) {
    var comment = "<%= escape_javascript(render 'comment', comment: @comment) %>";
    if ($("#commentsContainer .comment").length == 0) {
        $("#commentsContainer").prepend(comment);
    } else {
        $("#commentsContainer .comment:last").after(comment);
    }

    $("#commentsContainer textarea").val("");
} else {
    alert("Oh, no :(");
}
