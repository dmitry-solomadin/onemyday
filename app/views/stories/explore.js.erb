<% if params[:page].nil? %>
    $('#exploreStoriesContainer').html('<%= j render "/stories/list_stories", stories: @stories, empty_message: t('stories.empty_message') %>');
<% else %>
    $('#exploreStoriesContainer').append('<%= j render "/stories/list_stories", stories: @stories, empty_message: t('stories.empty_message') %>');
<% end %>

<% if @stories.next_page %>
    $('.pagination').replaceWith('<%= j will_paginate(@stories) %>');
<% else %>
    $('.pagination').html("");
<% end %>

$('#exploreStoriesContainer').masonry({itemSelector: '.smallStory'});