div#navbar
  div#navbarMiddle
    span.logo
    div.navbarInner
      a.btn.btn-foxtrot.topPanelButton.open-sans href="#" Explore
      input.imLookingFor type="text" placeholder="one day of freelancer"

    div.navbarInner.btn-group.fr
      - if current_user
        = image_tag current_user.avatar.url, width: '32', class: 'navbarAvatar'
        a.dropdown-toggle data-toggle="dropdown" href="#"
          = current_user.name
          span.caret
        ul.dropdown-menu
          li: a href="#" Edit Profile
          li
            = link_to "Sign out", signout_path
      - else
        a.btn.topPanelButton.open-sans data-toggle="modal" href="#signInModal" Sing In

