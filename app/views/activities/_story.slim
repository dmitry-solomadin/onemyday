- if story
  div.activity : pre
    div.activity-head
      i.icon-large.icon-picture
      a href="#{user_path story.user}"
        = story.user.name
      '&nbsp;added a new story
      a href="#{story_path story}"
        = story.title

    div.activity-created
      = activity.created_at.strftime("%d, %b %Y  %H:%M")
